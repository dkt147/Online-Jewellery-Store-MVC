@model IEnumerable<OnlineJewelleryShopping.Models.BrandMst>

@{
    ViewBag.Title = "Brand";
    Layout = "~/Views/Shared/_BackEnd.cshtml";
}

<h2>Brand</h2>

<p>
    @Html.ActionLink("Create New", "CreateBrand")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Brand_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Brand_Type)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Brand_Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Brand_Type)
        </td>
        <td>
            <button class="btn btn-warning">@Html.ActionLink("Edit", "Edit", new { id = item.Brand_Id })</button>
            <button class="btn btn-danger"> @Html.ActionLink("Delete", "Delete", new { id = item.Brand_Id })</button>
        </td>
    </tr>
}

</table>
